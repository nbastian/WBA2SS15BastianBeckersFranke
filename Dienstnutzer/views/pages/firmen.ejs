<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-12">
                <ul class="list-group">
                    <% unternehmen.forEach(function(firmen) { %>
                    <a href="/" class="list-group-item">
                        <h4 class="list-group-item-heading"><%= firmen.name %></h4>
                        <p class="list-group-item-text">Eventliste:<%= firmen.events %></p>
                        <p class="list-group-item-text">Userliste:<%= firmen.user %></p>
                        <p class="list-group-item-text">ID:<%= firmen.id %></p>
                    </a>
                    <% }); %>
                </ul>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>