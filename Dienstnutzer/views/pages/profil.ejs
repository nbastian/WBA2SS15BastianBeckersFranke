<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
                <ul class="list-group" id="veranstaltungList">
                    <% user.forEach(function(user) { %>
                    <a href="/mitarbeiter/<%= user.id %>" class="list-group-item">
                        <h4 class="list-group-item-heading"><%= user.username %></h4>
                        <p class="list-group-item-text">Email:<%= user.email %></p>
                        <p class="list-group-item-text">codiertes Password:<%= user.password %></p>
                        <p class="list-group-item-text">Experiences:<%= user.experiences %></p>
                        <p class="list-group-item-text">companyId:<%= user.companyId %></p>
                    </a>
                    <button class="btn btn-danger" onclick="deleteUser(<%= user.id %>);">l√∂schen</button>
                    <% }); %>
                </ul>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>